{
    "name": "aymanalhattami/log-request-response",
    "description": "Log Request and Response",
    "keywords": [
        "aymanalhattami",
        "log-request-response"
    ],
    "homepage": "https://github.com/aymanalhattami/log-request-response",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ayman Alhattami",
            "email": "ayman.m.alhattami@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AymanAlhattami\\LogRequestResponse\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AymanAlhattami\\LogRequestResponse\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "AymanAlhattami\\LogRequestResponse\\LogRequestResponseServiceProvider"
            ]
        }
    }
}
